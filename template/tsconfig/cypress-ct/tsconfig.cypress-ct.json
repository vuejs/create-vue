{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/__tests__/*",
    "cypress/support/component.*",
    "cypress/support/commands.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "./node_modules/.tmp/cypress-ct",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [
    { "path": "./tsconfig.app.json" }
  ]
}
